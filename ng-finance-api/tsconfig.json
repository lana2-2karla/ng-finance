{
   "compilerOptions": {
     "target": "es2018",
     "lib": [
       "es5",
       "es6",
       "ES2018"
     ],
     "experimentalDecorators": true,
     "emitDecoratorMetadata": true,
     "module": "commonjs",
     "moduleResolution": "node",
     "resolveJsonModule": true,
     "allowJs": true,
     "outDir": "./dist",
     "esModuleInterop": true,
     "skipLibCheck": true,
     "forceConsistentCasingInFileNames": true,
     "strict": true,
     "noImplicitAny": true,
     "strictPropertyInitialization": false,
     // caminho das minhas bibliotecas de tipos
     "typeRoots": ["./src/@types"]
   },
   "include": [
     "src/**/*"
   ],
   "exclude": [
     "node_modules",
     "dist"
   ],
   "ts-node": {
     "files": true
   }
 }